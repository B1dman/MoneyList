<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.MeFragment">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/textView2"
        android:layout_width="412dp"
        android:layout_height="115dp"
        android:layout_marginTop="4dp"

        android:background="@color/pink1"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977">

        <TextView
            android:id="@+id/username"
            android:layout_width="106dp"
            android:layout_height="39dp"
            android:layout_marginBottom="36dp"
            android:gravity="center|left"
            android:text="王天宇"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="69dp"
            android:layout_marginStart="52dp"
            android:gravity="center"
            android:text="用户"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/textView3"
        android:layout_width="414dp"
        android:layout_height="490dp"
        android:layout_marginBottom="4dp"
        android:background="#F5F7F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/textView5"
            android:layout_width="379dp"
            android:layout_height="205dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="账单"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.29">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="92dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="36dp"
                android:gravity="center"
                android:text="11月"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/money_out"
                android:layout_width="96dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="36dp"
                android:gravity="center|left"
                android:text="0.00"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6" />

            <TextView
                android:id="@+id/money_in"
                android:layout_width="96dp"
                android:layout_height="54dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="36dp"
                android:gravity="center|left"
                android:text="0.00"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.292"
                app:layout_constraintStart_toEndOf="@+id/money_out" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="74dp"
                android:layout_height="22dp"
                android:layout_marginTop="68dp"
                android:text="支出"
                app:layout_constraintStart_toStartOf="@+id/money_out"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="74dp"
                android:layout_height="22dp"
                android:layout_marginTop="68dp"
                android:text="收入"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/money_in"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:text="账单"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.023"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="117dp"
            android:layout_height="62dp"
            android:layout_marginBottom="52dp"
            android:background="@color/pink2"
            android:text="退出"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
